<h3>Compose new email</h3>
  <form>
    <div class="form-group">
      <label for="from">From:</label>
      {{input value=from id="from" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="to">To:</label>
      {{input value=to id="to" class="form-control"}}
    </div>

     <div class="form-group">
      <label for="subject">Subject:</label>
      {{input value=subject id="subject" class="form-control"}}
    </div>

     <div class="form-group">
      <label for="message">Message:</label>
      {{textarea value=message id="message" class="form-control" rows="5"}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>



